# Service Configuration
ENVIRONMENT=development  # development, testing, or production
SERVICE_NAME=multi-agent-code-analyzer
SERVICE_PORT=8080
DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password
REDIS_URI=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Vector Database Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
COLLECTION_NAME=mcp_contexts
VECTOR_DIM=384

# MinIO Configuration
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET_NAME=mcp-storage

# ETCD Configuration
ETCD_HOST=localhost
ETCD_PORT=2379
ETCD_PREFIX=/mcp/

# MCP Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_API_KEY=your_mcp_api_key
MCP_TIMEOUT=30
EMBEDDING_MODEL=all-MiniLM-L6-v2
CONTEXT_RETENTION_DAYS=90
FASTMCP_EMBEDDING_MODEL=all-MiniLM-L6-v2
FASTMCP_STORE_TYPE=milvus  # Changed from memory to milvus for persistence

# GitHub Integration
GITHUB_TOKEN=your_github_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name

# JIRA Integration
JIRA_DOMAIN=your_domain.atlassian.net
JIRA_EMAIL=your_email
JIRA_API_TOKEN=your_jira_token
JIRA_PROJECT_KEY=your_project_key

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30